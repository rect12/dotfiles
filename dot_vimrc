call plug#begin()
  Plug 'preservim/nerdcommenter'
call plug#end()

let g:NERDSpaceDelims = 1
filetype plugin on

set number
syntax on
set hidden
set nopaste
highlight lCursor guifg=NONE guibg=Cyan

set et " expandtab
set sw=4 " shift width
set ts=4 " tabstop == tab width

autocmd! bufwritepost .vimrc source ~/.vimrc
